    # def open_heatmap(self):
    #     heatmap_file = filedialog.askopenfilename(filetypes=[("PNG Files", "*.png")])
    #     if not heatmap_file:
    #         messagebox.showwarning("警告", "请先选择投影图文件！")
    #         return
